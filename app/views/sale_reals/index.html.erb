<div class="container-fluid dashboard" id="sales_cluster">

  <div class="row">
    <%= render 'shared/sidebar' %>
    <div class="col-lg-9 col-xl-10 offset-lg-3 offset-xl-2 dashboard__container">
      <div class="row">
        <%= react_component('DashboardHeader', { title: 'Ventas reales por día' }) %>

        <div class="col-12 mb-2">
          <div class="card dashboard__filter">
            <form action="">

              <div class="form-group">
                <select class="dashboard__filter-select" data-filter="select" name="" id="">
                  <option>Tienda 5</option>
                  <option>Alto Las Condes</option>
                  <option>Departamental</option>
                  <option>Plaza Egaña</option>
                </select>
              </div>

              <div class="form-group">
                <select class="dashboard__filter-select" data-filter="select" name="" id="">
                  <option>Departamento 3</option>
                  <option>Juvenil Mujer</option>
                </select>
              </div>

              <button>Buscar</button>
            </form>
          </div>
        </div>

        <div class="col-12 mb-2">
          <div class="card dashboard__table">
            <div class="align-self-end text-right mb-3 boton-comparar">
              <%= form_with url: import_sale_reals_path, multipart: true, local: true do %>
                <%= link_to 'Resetear datos', delete_sale_reals_path, class: "btn btn-primary" %>
                <%= link_to 'Descargar datos de prueba', downloads_sale_reals_path, class: "btn btn-primary" %>
              <% end %>
            </div>
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th>Tienda</th>
                    <th>Departamento</th>
                    <th>Fecha</th>
                    <th>Semana</th>
                    <th>Mes</th>
                    <th>Dia</th>
                    <th>Total Dia</th>
                  </tr>
                </thead>
                <tbody>
                  <% @sale_reals.each do |sale_real| %>
                    <tr>
                      <td><%= sale_real.store %></td>
                      <td><%= sale_real.department %></td>
                      <td><%= l sale_real.sale_date %></td>
                      <td><%= sale_real.week %></td>
                      <td><%= sale_real.month %></td>
                      <td><%= sale_real.day %></td>
                      <td><%= number_to_currency sale_real.total_day %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>

        <%= render 'shared/footer' %>

      </div>
    </div>
  </div>
</div>


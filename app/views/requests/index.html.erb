<p id="notice"><%= notice %></p>

<h1>Requests</h1>

<table class="table table-stripped table-condensed table-hover table-smallFont" id="table-request">
  <thead>
    <tr>
      <th>User</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
                <td><%= request.user_id %></td>
        
        <td>

        <%= link_to request_path(request), :class => 'btn btn-default' do %>
        <i class="fa fa-eye"></i>
        <% end %>

        <%= link_to edit_request_path(request), :class => 'btn btn-default' do %>
        <i class="fa fa-edit"></i>
        <% end %>

        <%= link_to request_path(request), method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-default' do %>
        <i class="fa fa-trash-o"></i>
        <% end %>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Request', new_request_path %>
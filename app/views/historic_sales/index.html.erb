<div class="container-fluid">
  <div class="pantalla-seccion d-flex flex-wrap justify-content-between mb-2">
    <div class="align-self-end">
      <div class="titulo-pantalla">Histórico</div>
    </div>
    <div class="align-self-end text-right boton-comparar">
      <%= form_with url: import_historic_sales_path, multipart: true, local: true do %>
        <br>
        <%= submit_tag '+ Importar', class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
  <div class="formulario-comparacion ">
    <div class="sub-titulo-pantalla">Ventas históricas</div>
    <div style="overflow: auto;">
      <table id="historic_sales" class="table-shift table table-striped" >
        <thead>
          <tr>
            <th>Store</th>
            <th>Department</th>
            <th>Date</th>
            <th class="hidden-xl-down">09:00</th>
            <th class="hidden-xl-down">10:00</th>
            <th class="hidden-xl-down">11:00</th>
            <th>12:00</th>
            <th>13:00</th>
            <th>14:00</th>
            <th>15:00</th>
            <th>16:00</th>
            <th>17:00</th>
            <th>18:00</th>
            <th>19:00</th>
            <th>20:00</th>
            <th>21:00</th>
            <th class="hidden-xl-down">22:00</th>
            <th class="hidden-xl-down">23:00</th>
            <th class="hidden-xl-down">00:00</th>
          </tr>
        </thead>

        <tbody>
          <% @historic_sales.each do |historic_sale| %>
            <tr>
              <td><%= historic_sale.store %></td>
              <td><%= historic_sale.department %></td>
              <td><%= historic_sale.historic_date %></td>
              <td class="hidden-xl-down"><%= number_to_currency historic_sale.nine %></td>
              <td class="hidden-xl-down"><%= number_to_currency historic_sale.ten %></td>
              <td class="hidden-xl-down"><%= number_to_currency historic_sale.eleven %></td>
              <td><%= number_to_currency historic_sale.twelve %></td>
              <td><%= number_to_currency historic_sale.thirteen %></td>
              <td><%= number_to_currency historic_sale.fourteen %></td>
              <td><%= number_to_currency historic_sale.fifteen %></td>
              <td><%= number_to_currency historic_sale.sixteen %></td>
              <td><%= number_to_currency historic_sale.seventeen %></td>
              <td><%= number_to_currency historic_sale.eighteen %></td>
              <td><%= number_to_currency historic_sale.nineteen %></td>
              <td><%= number_to_currency historic_sale.twenty %></td>
              <td><%= number_to_currency historic_sale.twenty_one %></td>
              <td class="hidden-xl-down"><%= number_to_currency historic_sale.twenty_two %></td>
              <td class="hidden-xl-down"><%= number_to_currency historic_sale.twenty_three %></td>
              <td class="hidden-xl-down"><%= number_to_currency historic_sale.twenty_four %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
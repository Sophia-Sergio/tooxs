        <td><%= number_to_currency historic_sale.twenty_one %></td>
        <td><%= number_to_currency historic_sale.twenty_two %></td>
        <td><%= number_to_currency historic_sale.twenty_three %></td>
        <td><%= number_to_currency historic_sale.twenty_four %></td>
      </tr>
    <% end %>
  </tbody>
</table>

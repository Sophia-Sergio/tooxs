%div.card-block
  = simple_form_for '', url: config_filter_parameters_path, method: :post do |f|
    %div.row
      %div.col-12.col-sm-6.col-md-6.col-lg-3
        = f.input :store, collection: filter_1[:stores], label: false, wrapper: :select2, selected: 1
      %div.col-12.col-sm-6.col-md-6.col-lg-3
        = f.input :department, collection: filter_1[:departments], label: false, wrapper: :select2, selected: 1
      %div.col-12.col-sm-3.col-md-6.col-lg-2
        = f.input :department, collection: filter_1[:years], label: false, wrapper: :select2, selected: 1
      %div.col-12.col-sm-3.col-md-6.col-lg-2
        = f.input :department, collection: filter_1[:months], label: false, wrapper: :select2, selected: 1
      %div.col-12.col-sm-3.col-md-6.col-lg-1
        = button_tag 'submit', class: 'btn btn-success' do
          %i.fa.fa-search{aria: {hidden: 'true'}}
          Buscar
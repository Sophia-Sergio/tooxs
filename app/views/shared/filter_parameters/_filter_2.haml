%div.card-block
  = simple_form_for '', url: config_filter_parameters_path, method: :post do |f|
    %div.row.row--right
      %div.col-12.col-sm-6.col-md-6.col-lg-3
        = f.input :department, collection: filter[:departments] || filter[:production_departments], label: false, wrapper: :select2, selected: 1
      %div.col-12.col-sm-3.col-md-6.col-lg-2
        %div.input-group.date
          %input.form-control{type: "text", value: Date.today.strftime("%d/%m/%Y")}
            %div.input-group-addon
      = button_tag 'submit', class: 'btn btn-success' do
        %i.fa.fa-search{ aria: { hidden: 'true' } }
        Buscar

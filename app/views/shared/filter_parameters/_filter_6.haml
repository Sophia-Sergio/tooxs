%div.card-block
  = simple_form_for '', url: config_filter_parameters_path, method: :post do |f|
    = f.input :store, collection: filter[:stores], label: false, wrapper: :select2, selected: 1
    = f.input :department, collection: filter[:departments], label: false, wrapper: :select2, selected: 1
    = f.input :year, collection: filter[:years], label: false, wrapper: :select2, selected: 2018
    = f.input :month, collection: filter[:months], label: false, wrapper: :select2, selected: 6
    = button_tag 'submit', class: 'btn btn-success' do
      %i.fa.fa-search{aria: { hidden: 'true'} }
      Buscar
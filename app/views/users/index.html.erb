<div class="container-fluid dashboard" id="sales_cluster">

  <div class="row">
    <%= render 'shared/sidebar' %>
    <div class="col-lg-9 col-xl-10 offset-lg-3 offset-xl-2 dashboard__container">
      <div class="row">
        <%= react_component('DashboardHeader', { title: 'Turnos' }) %>

        <div class="col-12 mb-2">
          <div class="card dashboard__filter">
            <form action="">

              <div class="form-group">
                <select class="dashboard__filter-select" data-filter="select" name="" id="">
                  <option>Tienda 5</option>
                  <option>Alto Las Condes</option>
                  <option>Departamental</option>
                  <option>Plaza Egaña</option>
                </select>
              </div>

              <div class="form-group">
                <select class="dashboard__filter-select" data-filter="select" name="" id="">
                  <option>Departamento 3</option>
                  <option>Juvenil Mujer</option>
                </select>
              </div>

              <button>Buscar</button>
            </form>
          </div>
        </div>

        <div class="col-12 mb-2">
          <div class="card dashboard__table">
            <h5 class="card-title">Listado de usuarios</h5>
            <div class="align-self-end text-right mb-3 boton-comparar">
              <%= link_to '+ Usuario', new_user_path, class: "btn btn-primary" %>
            </div>
            <div class="table-responsive">
              <table class="table">
                <thead>
                  <tr>
                    <th>Nombre</th>
                    <th>Apellidos</th>
                    <th>Rol</th>
                    <th>Estado</th>
                    <th>Rut</th>
                    <th>Acciones</th>
                  </tr>
                </thead>
                <tbody>
                  <% @users.each do |user| %>
                  <tr>
                    <td><%= user.name %></td>
                    <td><%= user.lastname %></td>
                    <td><%= user.role %></td>
                    <td><%= user.status %></td>
                    <td><%= user.rut %></td>
                    <td>
                      <%= link_to user_path(user), :class => 'btn btn-default' do %>
                      <i class="fa fa-eye"></i>
                      <% end %>
                      <%= link_to edit_user_path(user), :class => 'btn btn-default' do %>
                      <i class="fa fa-edit"></i>
                      <% end %>
                      <%= link_to user_path(user), method: :delete, data: { confirm: '¿Estás seguro que deseas eliminar este registro?' }, :class => 'btn btn-default' do %>
                      <i class="fa fa-trash-o"></i>
                      <% end %>
                    </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>

        <%= render 'shared/footer' %>

      </div>
    </div>
  </div>
</div>

<p id="notice"><%= notice %></p>
<div class="container-fluid">
  <div class="pantalla-seccion d-flex flex-wrap justify-content-between mb-2">
    <div class="align-self-end">
      <div class="titulo-pantalla">Turnos</div>
    </div>  
    <div class="align-self-end text-right boton-comparar">
      <%= link_to '+ Usuario', new_user_path, class: "btn btn-primary" %>
    </div>    
  </div>
  <div class="formulario-comparacion">
    <div class="sub-titulo-pantalla">Listado de usuarios</div>
    <div style="overflow-y: auto;">
      <table class="table-shift table table-striped">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Apellidos</th>
            <th>Rol</th>
            <th>Estado</th>
            <th>Rut</th>
            <th colspan="1"> Acciones </th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.lastname %></td>
            <td><%= user.role %></td>
            <td><%= user.status %></td>
            <td><%= user.rut %></td>
          <td align="center">
            <%= link_to user_path(user), :class => 'btn btn-default' do %>
            <i class="fa fa-eye"></i> 
            <% end %>

            <%= link_to edit_user_path(user), :class => 'btn btn-default' do %>
            <i class="fa fa-edit"></i>
            <% end %>

            <%= link_to user_path(user), method: :delete, data: { confirm: '¿Estás seguro que deseas eliminar este registro?' }, :class => 'btn btn-default' do %>
            <i class="fa fa-trash-o"></i>
            <% end %>
          </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


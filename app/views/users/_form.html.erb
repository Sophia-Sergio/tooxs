<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :lastname %>
    <%= f.input :surname %>
    <%= f.input :role %>
    <%= f.input :picture %>
    <%= f.input :status %>
    <%= f.input :position %>
    <%= f.input :rut %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

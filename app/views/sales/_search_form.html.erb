<div class="sub-titulo-pantalla">Parámetros</div>
<div class="<%= 'dn' if locals[:status] == 'hidden' %>" id="sales_form">
  <%= simple_form_for @search, :url => locals[:path], :class => 'row', :method => :get do |f| %>
  <div id="sales_search_form" class="d-flex justify-content-end bd-highlight">
    <div class="input-form"><%= f.input :store, collection: @stores, label: 'Tienda', wrapper: :select2, selected: params[:store] %></div>
    <div class="input-form" ><%= f.input :department, collection: @departments, label: 'Departamento', wrapper: :select2,selected: params[:department] %></div>
    <div class="input-form"><%= f.input :year, collection: [2018], label: 'Año', wrapper: :select2, selected: params[:year] %></div>
    <div class="input-form"><%= f.input :month, collection: (1..12).map {|m| [I18n.l(DateTime.parse(Date::MONTHNAMES[m]), format: "%B").capitalize, m]}, label: 'Mes', wrapper: :select2, selected: params[:month]  %></div>
    <input type="hidden" name="week" id="week" value="<%= params[:week] %>">
    <div>
      <%= button_tag type: 'submit', class: "btn btn-success" do %>
      <i class="fa fa-search" aria-hidden="true"></i> Buscar
      <% end %>
    </div>  
  </div>
  <% end %>
</div>
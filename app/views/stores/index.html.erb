<p id="notice"><%= notice %></p>
<div class="container-fluid">
  <div class="pantalla-seccion d-flex justify-content-between mb-2">
    <div class="align-self-end">
      <div class="titulo-pantalla">Tiendas</div>
    </div>  
    <div class="align-self-end text-right">
      <%= form_with url: import_stores_path, multipart: true, local: true do %>
        <%= label_tag :file, 'Importar desde xlsx' %>
        <%= file_field_tag :file  %>
        <br>
        <%= submit_tag '+ Importar', class: "btn" , style: "line-height:52px; padding: 0 22px;" %>
        <%= link_to '+ Tienda', new_store_path, class: "btn btn-primary btn-compare-sales", style: "line-height:52px;" %>
      <% end %>
    </div>    
  </div>
  <div class="formulario-comparacion">
    <div class="sub-titulo-pantalla">Listado de tiendas habilitadas</div>
    <div style="overflow: auto;">    
      <table class="table-shift table table-bordered">
        <thead>
          <tr>
            <th>ID origen</th>
            <th>Nombre</th>
            <th>Dirección</th>
            <th>Número</th>
            <th>Ciudad</th>
            <th>Comuna</th>
            <th>Distrito</th>
            <th>Código País</th>
            <th>Tamaño</th>
            <th>Segmento económico</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @stores.each do |store| %>
            <tr>
              <td><%= store.origin_id %></td>
              <td><%= store.name %></td>
              <td><%= store.street %></td>
              <td><%= store.number %></td>
              <td><%= store.city %></td>
              <td><%= store.county %></td>
              <td><%= store.district %></td>
              <td><%= store.country %></td>
              <td><%= store.size %></td>
              <td><%= store.economic_segment %></td>
              <td><%= link_to 'Mostrar', store %></td>
              <td><%= link_to 'Editar', edit_store_path(store) %></td>
              <td><%= link_to 'Eliminar', store, method: :delete, data: { confirm: '¿Estás seguro que deseas eliminar este registro?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<p id="notice"><%= notice %></p>
<h1>Tiendas</h1>
<%= form_with url: import_stores_path, multipart: true, local: true do %>
  <%= label_tag :file, 'Importar desde xlsx' %>
  <%= file_field_tag :file  %>
  <br>
  <%= submit_tag 'Importar', class: "btn btn-light"  %>
<% end %>
<br><br>
<table class="table-shift table table-bordered bg-master-lightest">
  <thead>
    <tr class="bg-success text-center ">
      <th colspan="13" class="no-margin text-uppercase text-white fs-15">
        <h3 class="no-margin text-center text-uppercase text-white fs-15">Listado de tiendas habilitadas</h3>
      </th>
    </tr>
    <tr>
      <th>ID origen</th>
      <th>Nombre</th>
      <th>Dirección</th>
      <th>Número</th>
      <th>Ciudad</th>
      <th>Comuna</th>
      <th>Distrito</th>
      <th>Código País</th>
      <th>Tamaño</th>
      <th>Segmento económico</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stores.each do |store| %>
      <tr>
        <td><%= store.origin_id %></td>
        <td><%= store.name %></td>
        <td><%= store.street %></td>
        <td><%= store.number %></td>
        <td><%= store.city %></td>
        <td><%= store.county %></td>
        <td><%= store.district %></td>
        <td><%= store.country %></td>
        <td><%= store.size %></td>
        <td><%= store.economic_segment %></td>
        <td><%= link_to 'Mostrar', store %></td>
        <td><%= link_to 'Editar', edit_store_path(store) %></td>
        <td><%= link_to 'Eliminar', store, method: :delete, data: { confirm: '¿Estás seguro que deseas eliminar este registro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Crear tienda', new_store_path, class: "btn btn-primary" %>

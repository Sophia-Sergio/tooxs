<p id="notice"><%= notice %></p>

<h1>Tiendas</h1>
<%= form_with url: import_stores_path, multipart: true, local: true do %>
  <%= label_tag :file, 'Importar desde xlsx' %>
  <%= file_field_tag :file  %>
  <br>
  <%= submit_tag 'Importar' %>
<% end %>
<br><br>
<table class="table   table-hover table-hover table-bordered">
  <thead>
    <tr>
      <th>ID origen</th>
      <th>Name</th>
      <th>Street</th>
      <th>Number</th>
      <th>City</th>
      <th>County</th>
      <th>District</th>
      <th>Country</th>
      <th>Size</th>
      <th>Economic Segment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stores.each do |store| %>
      <tr>
        <td><%= store.origin_id %></td>
        <td><%= store.name %></td>
        <td><%= store.street %></td>
        <td><%= store.number %></td>
        <td><%= store.city %></td>
        <td><%= store.county %></td>
        <td><%= store.district %></td>
        <td><%= store.country %></td>
        <td><%= store.size %></td>
        <td><%= store.economic_segment %></td>
        <td><%= link_to 'Show', store %></td>
        <td><%= link_to 'Edit', edit_store_path(store) %></td>
        <td><%= link_to 'Destroy', store, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Store', new_store_path %>

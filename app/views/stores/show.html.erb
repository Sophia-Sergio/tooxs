<div class="row">
  <div class="col-md-12">
    <h2><%= @store.name %></h2>
    <br>
  </div>
</div>
<div class="row">
    <div class="card card-transparent">
      <!-- Nav tabs -->
      <ul class="nav nav-tabs nav-tabs-fillup hidden-sm-down" data-init-reponsive-tabs="dropdownfx">
        <li class="nav-item">
          <a href="#" class="active" data-toggle="tab" data-target="#tab-fillup1" aria-expanded="true"><span>Detalle Tienda</span></a>
        </li>
        <li class="nav-item">
          <a href="#" data-toggle="tab" data-target="#tab-fillup2" class="" aria-expanded="false"><span>Departamentos</span></a>
        </li>
        <li class="nav-item">
          <a href="#" data-toggle="tab" data-target="#tab-fillup3" class="" aria-expanded="false"><span>Personal</span></a>
        </li>
      </ul>
      <!-- Tab panes -->
      <div class="tab-content">
        <div class="tab-pane active" id="tab-fillup1">
          <div class="row">
            <div class="col-md-6 offset-md-3">
              <div class="card card-default">
                <div class="card-header  separator">
                  <div class="card-title text-success">Detalle de Tienda</div>
                </div>
                <div class="card-block">
                  <table class="table table-borxdered table-condensed table-stripped table-smaxllFont">
                    <tr>
                      <td><strong>Nombre:</strong></td>
                      <td><%= @store.name %></td>
                    </tr>
                    <tr>
                      <td><strong>Dirección:</strong></td>
                      <td><%= @store.street %></td>
                    </tr>
                    <tr>
                      <td><strong>Número:</strong></td>
                      <td><%= @store.number %></td>
                    </tr>
                    <tr>
                      <td><strong>Ciudad:</strong></td>
                      <td><%= @store.city %></td>
                    </tr>
                    <tr>
                      <td><strong>Distrito:</strong></td>
                      <td><%= @store.district %></td>
                    </tr>
                    <tr>
                      <td><strong>Comuna:</strong></td>
                      <td><%= @store.county %></td>
                    </tr>
                    <tr>
                      <td><strong>País:</strong></td>
                      <td><%= @store.country %></td>
                    </tr>
                    <tr>
                      <td><strong>Tamaño Tienda:</strong></td>
                      <td><%= @store.size %></td>
                    </tr>
                    <tr>
                    <td><strong>Segmento Económico:</strong></td>
                    <td><%= @store.economic_segment %></td>
                    </tr>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="tab-pane" id="tab-fillup2">
          <div class="row">
            <div class="col-md-6 offset-md-3">
              <div class="card card-default">
                <div class="card-header  separator">
                  <div class="card-title text-success">Departamentos Tienda</div>
                </div>
                <div class="card-block">
                  <ol>
                    <% @store.departments.each do |d| %>
                    <li><%= d.name %></li>
                    <% end  %>
                  </ol>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="tab-pane" id="tab-fillup3">
          <div class="row">
            <div class="col-lg-12">
              <div class="card card-default">
                <div class="card-header  separator">
                  <div class="card-title text-success">Colaboradores Tienda</div>
                </div>
                <div class="card-block">
                  <table class="table table-borxdered table-stripped table-smallFont">
                    <thead>
                      <tr>
                        <th>Departamento</th>
                        <th>Foto</th>
                        <th>Id</th>
                        <th>Nombre</th>
                        <th>Email</th>
                        <th>Teléfono</th>
                        <th>País</th>
                      </tr>
                    </thead>
                    <tbody>
                    <% @store.departments.each do |d| %>
                      <% d.sellers.each do |s| %>
                      <tr>
                        <td><%= d.name %> </td>
                        <td> - </td>
                        <td><%= s.id %></td>
                        <td><strong><%= s.name %> <%= s.lastname %></strong></td>
                        <td><%= s.email %></td>
                        <td><%= s.phone %></td>
                        <td><%= s.country %></td>
                      </tr>
                      <% end %>
                    <% end %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%= link_to 'Volver', stores_path, class: "btn btn-primary" %>
</div>
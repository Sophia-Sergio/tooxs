
<div class="row">
  <div class="col-md-12">
    <h2><%= @store.name %></h2>
    <br>
  </div>

    <div class="card-block">
      <div class="row">
        <div class="col-lg-6">
          <div class="card card-default">
            <div class="card-header  separator">
              <div class="card-title text-success">Detalle de Tienda
              </div>
            </div>
            <div class="card-block">
             <table class="table table-borxdered table-condensed table-stripped table-smaxllFont">
              <tr>
                <td><strong>Nombre:</strong></td>
                <td><%= @store.name %></td>
              </tr>

              <tr>
                <td><strong>Dirección:</strong></td>
                <td><%= @store.street %></td>
              </tr>

              <tr>
                <td><strong>Número:</strong></td>
                <td><%= @store.number %></td>
              </tr>

              <tr>
                <td><strong>Ciudad:</strong></td>
                <td><%= @store.city %></td>
              </tr>

              <tr>
                <td><strong>Distrito:</strong></td>
                <td><%= @store.district %></td>
              </tr>

              <tr>
                <td><strong>Comuna:</strong></td>
                <td><%= @store.county %></td>
              </tr>

              <tr>
                <td><strong>País:</strong></td>
                <td><%= @store.country %></td>
              </tr>

              <tr>
                <td><strong>Tamaño Tienda:</strong></td>
                <td><%= @store.size %></td>
              </tr>

              <tr>
                <td><strong>Segmento Económico:</strong></td>
                <td><%= @store.economic_segment %></td>
              </tr>
            </table>
            </div>
          </div>
        </div>
        <div class="col-lg-6">
          <div class="card card-default">
            <div class="card-header  separator">
              <div class="card-title text-success">Departamentos Tienda
              </div>

            </div>
            <div class="card-block">
              <br>
              <ol>
                <% @store.departments.each do |d| %>
                <li><%= d.name %></li>
                <% end  %>
              </ol>

            </div>
          </div>
        </div>

        <div class="col-lg-12">
          <div class="card card-default">
            <div class="card-header  separator">
              <div class="card-title text-success">Funcionarios Tienda
              </div>

            </div>
            <div class="card-block">
              <br>
              <table class="table table-borxdered table-stripped table-smallFont">
                <thead>
                <tr>
                  <th>Departamento</th>
                  <th>Foto</th>
                  <th>Id</th>
                  <th>Nombre</th>
                  <th>Email</th>
                  <th>Teléfono</th>
                  <th>País</th>
                </tr>
                </thead>
                <% @store.departments.each do |d| %>
                  <tr>
                  <td> <%= d.name %> </td>
                  <% d.sellers.each do |s| %>
                    <td> - </td>
                    <td><%= s.id %></td>
                    <td><strong><%= s.name %> <%= s.lastname %></strong></td>
                    <td><%= s.email %></td>
                    <td><%= s.phone %></td>
                    <td><%= s.country %></td>
                  <% end %>
                </tr>
                <% end %>
              </table>
            </div>
          </div>
        </div>
        

      </div>
    </div>


    <div class="card card-transparent">
      <!-- Nav tabs -->

      <ul class="nav nav-tabs nav-tabs-fillup hidden-sm-down" data-init-reponsive-tabs="dropdownfx">
        <li class="nav-item">
          <a href="#" class="active" data-toggle="tab" data-target="#tab-fillup1" aria-expanded="true"><span>Detalle Tienda</span></a>
        </li>
        <li class="nav-item">

<div class="<%= 'dn' if locals[:status] == 'hidden' %> dashboard__filter" id="sales_form">
  <%= simple_form_for @search, :url => locals[:path], :class => '', :method => :get do |f| %>
    <%= f.input :cluster, collection: @clusters, label: 'Segmento económico', wrapper: :select2, selected: params[:cluster], label: false %>
    <%= f.input :department, collection: @masterDepartments, label: 'Departamento', wrapper: :select2, selected: params[:department], label: false %>
    <%= f.input :year, collection: [2018], label: 'Año', wrapper: :select2, selected: params[:year], label: false %>
    <%= f.input :month, collection: (1..12).map {|m| [I18n.l(DateTime.parse(Date::MONTHNAMES[m]), format: "%B").capitalize, m]}, label: 'Mes', wrapper: :select2, selected: @month, label: false  %>
    <input type="hidden" name="week" id="week" value="<%= params[:week] %>">
    <button class="btn btn-primary" type="submit" name="button"><i class="fa fa-search" aria-hidden="true"></i> Buscar</button>
  <% end %>
</div>
<div class="card col-md-6 offset-md-3">
  <div class="card-block">
    <%= form_with(model: seller, local: true) do |form| %>
      <% if seller.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(seller.errors.count, "error") %> prohibited this seller from being saved:</h2>

          <ul>
          <% seller.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= form.label :rut, class: "form-label" %>
        <%= form.text_field :rut, id: :seller_rut, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :name, class: "form-label" %>
        <%= form.text_field :name, id: :seller_name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :lastname, class: "form-label" %>
        <%= form.text_field :lastname, id: :seller_lastname, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :email, class: "form-label" %>
        <%= form.text_field :email, id: :seller_email, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :phone, class: "form-label" %>
        <%= form.text_field :phone, id: :seller_phone, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :street, class: "form-label" %>
        <%= form.text_field :street, id: :seller_street, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :number, class: "form-label" %>
        <%= form.text_field :number, id: :seller_number, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :city, class: "form-label" %>
        <%= form.text_field :city, id: :seller_city, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :district, class: "form-label" %>
        <%= form.text_field :district, id: :seller_district, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :county, class: "form-label" %>
        <%= form.text_field :county, id: :seller_county, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :country, class: "form-label" %>
        <%= form.text_field :country, id: :seller_country, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :department_id, class: "form-label" %>
        <%= form.select :department_id,
                        options_from_collection_for_select(Department.all, :id, :name, seller.try(:department_id)),
                        { include_blank: false },
                        { id: :department_id, class: :'form-control'  }
        %>
      </div>

      <div class="actions">
        <%= form.submit "Aceptar", class: "btn btn-primary" %> &nbsp; <%= link_to 'Volver', sellers_path %>
      </div>
    <% end %>
  </div>
</div>
%div.pantalla-seccion.d-flex.justify-content-between.mb-2
  %div.align-self-end
    %div.titulo-pantalla= 'Cambio de Plan'
%div.m-t-10
  = render 'shared/filter_parameters/filter_4', filter: retail_parameters
.row

          %tr
            %th{scope: 'col'}
            %th{scope: 'col'} Semana 1
            %th{scope: 'col'} Semana 2
            %th{scope: 'col'} Semana 3
            %th{scope: 'col'} Semana 4
            %th{scope: 'col'} Total
        %tbody
          %tr.week
            %th{scope: 'row'} Plan
            %td.week-one 8500
            %td.week-two 8500
            %td.week-three 8500
            %td.week-four 8500
            %td.month-amount 34000
          %tr
            %th{scope: 'row'} Ajuste %
            %td{colspan: 5}
              .input-group
                %input{type: 'number', class: 'form-control percentage', 'aria-describedby': 'basic-addon1', 'value': 0}
          %tr
            %th{scope: 'row'} Ajuste monto
            %td{colspan: 5}
              .input-group
                %input{type: 'number', class: 'form-control amount', 'aria-describedby': 'basic-addon1', 'value': 0}

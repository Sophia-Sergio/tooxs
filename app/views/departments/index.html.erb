<p id="notice"><%= notice %></p>
<div class="container-fluid">
  <div class="pantalla-seccion d-flex justify-content-between mb-2">
    <div class="align-self-end">
      <div class="titulo-pantalla">Departamentos</div>
    </div>  
    <div class="align-self-end text-right">
        <%= form_with url: import_departments_path, multipart: true, local: true do %>
          <%= label_tag :file, 'Importar desde xlsx' %>
          <%= file_field_tag :file  %>
          <br>
          <%= submit_tag 'Importar', class: "btn", style: "line-height:52px; padding: 0 22px;" %>
          <%= link_to '+ Departamento', new_department_path, class: "btn btn-primary" %>
        <% end %>
    </div>    
  </div>
</div>
<div class="formulario-comparacion">
  <div class="sub-titulo-pantalla">Listado de departamentos habilitados</div>
  <table class="table-shift table table-bordered bg-master-lightest">
    <thead>
      <tr>
        <th>ID</th>
        <th>Nombre</th>
        <th>Tienda</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @departments.each do |department| %>
        <tr>
          <td><%= department.origin_id %></td>
          <td><%= department.name %></td>
          <td><%= department.store %></td>
          <td><%= link_to 'Mostrar', department %></td>
          <td><%= link_to 'Editar', edit_department_path(department) %></td>
          <td><%= link_to 'Eliminar', department, method: :delete, data: { confirm: '¿Estás seguro que quieres eliminar este registro?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

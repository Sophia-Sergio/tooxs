<p id="notice"><%= notice %></p>
<h1>Departamentos</h1>
<%= form_with url: import_departments_path, multipart: true, local: true do %>
  <%= label_tag :file, 'Importar desde xlsx' %>
  <%= file_field_tag :file  %>
  <br>
  <%= submit_tag 'Importar', class: "btn btn-light" %>
<% end %>
<br><br>
<table class="table-shift table table-bordered bg-master-lightest">
  <thead>
    <tr class="bg-success text-center ">
      <th colspan="13" class="no-margin text-uppercase text-white fs-15">
        <h3 class="no-margin text-center text-uppercase text-white fs-15">Listado de departamentos habilitados</h3>
      </th>
    </tr>
    <tr>
      <th>ID</th>
      <th>Nombre</th>
      <th>Tienda</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.origin_id %></td>
        <td><%= department.name %></td>
        <td><%= department.store %></td>
        <td><%= link_to 'Mostrar', department %></td>
        <td><%= link_to 'Editar', edit_department_path(department) %></td>
        <td><%= link_to 'Eliminar', department, method: :delete, data: { confirm: '¿Estás seguro que quieres eliminar este registro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Crear departamento', new_department_path, class: "btn btn-primary" %>

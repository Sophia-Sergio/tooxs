<p id="notice"><%= notice %></p>

<h1>Departamentos</h1>
<%= form_with url: import_departments_path, multipart: true, local: true do %>
  <%= label_tag :file, 'Importar desde xlsx' %>
  <%= file_field_tag :file  %>
  <br>
  <%= submit_tag 'Importar' %>
<% end %>

<br><br>
<table class="table   table-hover table-hover table-bordered">

  <thead>
    <tr>
      <th>Origin</th>
      <th>Name</th>
      <th>Store</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.origin_id %></td>
        <td><%= department.name %></td>
        <td><%= department.store %></td>
        <td><%= link_to 'Show', department %></td>
        <td><%= link_to 'Edit', edit_department_path(department) %></td>
        <td><%= link_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Department', new_department_path %>

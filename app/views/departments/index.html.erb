<div class="container-fluid dashboard" id="sales_cluster">

  <div class="row">
    <%= render 'shared/sidebar' %>
    <div class="col-lg-9 col-xl-10 offset-lg-3 offset-xl-2 dashboard__container">
      <div class="row">
        <%= react_component('DashboardHeader', { title: 'Departamentos' }) %>

        <div class="col-12 mb-2">
          <div class="card dashboard__table">
            <h5 class="card-title">Listado de departamentos habilitados</h5>
            <div class="align-self-end text-right mb-3 boton-comparar">
              <%= form_with url: import_departments_path, multipart: true, local: true do %>
                <%= link_to '+ Departamento', new_department_path, class: "btn btn-primary" %>
              <% end %>
            </div>
            <div class="table-responsive">
              <table class="table">
                <thead>
                  <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Tienda</th>
                    <th colspan="3"></th>
                  </tr>
                </thead>
                <tbody>
                  <% @departments.each do |department| %>
                  <tr>
                    <td><%= department.origin_id %></td>
                    <td><%= department.name %></td>
                    <td><%= department.store %></td>
                    <td><%= link_to 'Mostrar', department %></td>
                    <td><%= link_to 'Editar', edit_department_path(department) %></td>
                    <td><%= link_to 'Eliminar', department, method: :delete, data: { confirm: '¿Estás seguro que quieres eliminar este registro?' } %></td>
                  </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>

        <%= render 'shared/footer' %>

      </div>
    </div>
  </div>
</div>


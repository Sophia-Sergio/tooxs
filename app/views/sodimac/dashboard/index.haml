      .dashboard-market__chart
        %h3.sub-titulo-pantalla Cumplimiento de plan
        %canvas#market-plan-compliance
    .col-md-6.dashboard__productivity-charts
      .dashboard__productivity-charts__item__table{style: 'background-color: white; border-radius: 5px; border: 1px solid #dce3e6; padding: 20px;'}
        .table-responsive
          %table.table.table-details
            %thead
              %tr{style: 'font-size: 14px;'}
                %th &nbsp;
                %th Colaborador
                %th Ventas
                %th Meta
                %th Turno
                %th Cumplimiento
                %th &nbsp;
            %tbody
              - @setSellers.each do |data|
                %tr
                  %td
                    .thumbnail
                      = image_tag 'table-thumbnail-default.jpg', alt: data[:seller].fullname
                  %td
                    = data[:seller].fullname
                  %td
                    = data[:sale]
                  %td
                    = data[:plan]
                  %td
                    T#{data[:seller].assigned_shift}
                  %td.progress-container
                    .progress
                      %span.progress-value
                        = data[:cumplimiento]
                      .progress-bar{role: 'progressbar', aria: {valuenow: 60, valuemin: 0, valuemax: 0}, style: "width: #{data[:cumplimiento]}%"}
                  %td
                    = link_to '<i class="fa fa-caret-right"></i>'.html_safe, data[:seller]

<div class="container-fluid" id="productivity_report">
  <div class="pantalla-seccion d-flex justify-content-between mb-2">
    <div class="align-self-end">
      <div class="titulo-pantalla">Reporte</div>
    </div>    
  </div>

  <div class="sub-titulo-pantalla">Parámetros</div>
  <div>
    <%= simple_form_for @search, :url => productivity_report_path, :class => 'row', :method => :get do |f| %>
    <div class="d-flex justify-content-end bd-highlight" id="sales_search_form">

      <div class="input-form">
        <%= f.input :store, collection: @stores, label: 'Tienda', wrapper: :select2, selected: params[:store]  %>  
      </div>

      <div class="input-form">
        <%= f.input :department, collection: @departments, label: 'Departamento', wrapper: :select2,selected: params[:department] %>  
      </div>

      <div class="input-form">
        <%= f.input :year, collection: (2018..2018), label: 'Año', wrapper: :select2, selected: params[:year] %>  
      </div>

      <div class="input-form">
        <%= f.input :month, collection: (1..Date.today.strftime("%m").to_i).map {|m| [I18n.l(DateTime.parse(Date::MONTHNAMES[m]), format: "%B").capitalize, m]}, label: 'Mes', wrapper: :select2, selected: params[:month]  %>  
      </div>

      <div>
        <%= button_tag type: 'submit',class: "btn btn-success btn-lg btn-larger" do %>
        <i class="fa fa-search" aria-hidden="true"></i> Buscar
        <% end %>
      </div>  
    </div>
    <% end %>
  </div>
</div>


<div class="formulario-comparacion">
  <div class="sub-titulo-pantalla">Resultado de búsqueda</div>
  <div class="row ">  
    <h5 class="text-uppercase m-t-30 fs-13 bold">Productividad por Hora // Alto Las Condes - Rincon Juvenil Mujer</h5>
  </div>
  <div class="row justify-content-md-center">
    <br>
    <div class="btn-group mb-3" role="group" aria-label="Basic example">
      <button id="button-horas" type="button" class="btn btn-secondary cambiar-grafico" data-grafico="1">Horas</button>
      <button id="button-pesos" type="button" class="btn btn-secondary cambiar-grafico" data-grafico="2">Pesos</button>
    </div>
  </div> 
  <div class="row ">
    <div class="col-sm-12 col-xl-10 offset-xl-1">
      <div id="chartContainer" style="width:100%; display: none;">
        <canvas id="canvas"> </canvas>
      </div>
      <div id="chartContainer-2" style="width:100%; display: none;">
        <canvas id="canvas-2"> </canvas>
      </div>
    </div>
  </div>
  <div class="row justify-content-md-center">
    <div class="input-group mb-3 col-xl-4">
      <input type="number" id="values-hour" class="form-control" style="height: 52px;" placeholder="Evaluar horas" aria-label="Evaluar horas" aria-describedby="basic-addon2">
      <div class="input-group-append">
        <button id="evaluar" class="btn btn-outline-secondary btn-success" type="button">Evaluar</button>
      </div>
    </div>
  </div>
</div>

<div  class="formulario-comparacion">
  <div class="row">             
    <div id="productividades" class="col-md-8 offset-md-2">
    <% if !@plan_w_total.blank? %>
      <% for week in @plan_w_total %>
        <br><br>
        <div class="sub-titulo-pantalla"><%= week[:name] %></div>
        <table class="table-shift table table-bordered">
            <thead>
                <tr>
                    <th class="text-center">
                    </th>
                    <% countWeek = 0 %>
                    <% for semana in week[:plan_w] %>
                    <th> Semana <%= countWeek +=1 %></th>           
                    <% end %>
                </tr>
            </thead>
            <tbody class="t-p-3">
                <tr>
                  <td>Plan de Venta</td>
                  <% if !week[:plan_w].blank? %>
                    <% for semana in week[:plan_w] %>
                    <td><%= number_to_currency semana %></td>           
                    <% end %>
                  <% else %>
                    <% if countWeek != 0 %>                             
                      <% (1..countWeek).each do |i| %>
                      <td></td>
                      <% end %>
                    <% end %>
                  <% end %>
                </tr>
                <tr>
                  <td> Semanal (HH) </td>
                  <% if !week[:dot_w].blank? %>
                    <% for dotacion in week[:dot_w] %>
                    <td><%= dotacion %></td>                                  
                    <% end %>
                  <% else %>    
                  <% if countWeek != 0 %>                             
                      <% (1..countWeek).each do |i| %>
                      <td></td>
                      <% end %>
                    <% end %>                         
                  <% end %>
                </tr>
                <tr>
                  <td>Productividad</td>
                  <% if !week[:prod_w].blank? %>
                  <% for productividad in week[:prod_w] %>
                  <td><%= number_to_currency productividad %></td>                                  
                  <% end %>
                  <% else %>
                  <% if countWeek != 0 %>                             
                      <% (1..countWeek).each do |i| %>
                      <td></td>
                      <% end %>
                    <% end %>                             
                  <% end %>
                </tr>
            </tbody>
        </table>
      <% end %>
    <% else %>                            
    <% end %>
    </div>
  </div>
</div>  
<div class="formulario-comparacion">
  <div class="row"> 
    <div class="col-lg-6">
      <div class="sub-titulo-pantalla">Productividad</div><!-- al <%= I18n.l(Time.now, format: "%A, %d %B %Y", locale: :es) %></h2> -->
      <table id="table_desviaciones" class="table-shift table table-bordered">
        <thead>
          <th></th>
          <th>Prod. Objetivo</th>
          <th>Dotación</th>
          <th>Venta</th>
          <th>Prod.</th>
        </thead>
        <tbody>
          <tr>
            <td>Prod. Real</td>
            <td class="prod_obj"><%= number_to_currency @plan["datos"]["prod_obj"].to_i %></td>
            <td id="dot_real-"><%= @dotacion_w_real.sum %></td>
            <td id="vent_real-"><%= number_to_currency @plan_w_real.sum %></td>
            
            <td id="prod_real-">
            <% if @dotacion_w_real.sum != 0 %>
              <%= number_to_currency (@plan_w_real.sum / @dotacion_w_real.sum).round %>
            <% end %> 
            </td>
          </tr>
          <tr>
            <td>Prod. Optimizada</td>
            <td class="prod_obj"><%= number_to_currency @plan["datos"]["prod_obj"].to_i %></td>
            <td id="dot_op-"><%= @dotacion_w_op.sum %></td>
            <td id="vent_op-"><%= number_to_currency @plan_w_op.sum %></td>
            <td id="prod_op-"><%= number_to_currency (@plan_w_op.sum / @dotacion_w_op.sum).round %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="offset-lg-1 col-lg-5">
      <div class="sub-titulo-pantalla">Detalle</div>
      <table id="table_desviaciones" class="table table-bordered">
        <thead>
          <th></th>
          <th>Horas faltantes</th>
          <th>Horas sobrantes</th>
        </thead>
        <tbody>
          <tr>
            <td>Real</td>
            <td id="sum-exceso"></td>
            <td id="sum-faltante"></td>
          </tr>
          <tr>
            <td>Optimizada</td>
            <td id="sum-exceso-op"></td>
            <td id="sum-faltante-op"></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row"> 
    <div class="col-lg-6 offset-lg-3">
      <div class="sub-titulo-pantalla">Eficiencia</div>
      <table id="table_desviaciones" class="table-shift table table-bordered">
        <thead>
          <th>Item</th>
          <th>Valor %</th>
        </thead>
        <tbody>
          <tr>
            <td>Nivel eficiencia optimizada</td>
            <td id="efinciencia-op"></td>
          </tr>
          <tr>
            <td>Nivel esfuerzo sin optimizar</td>
            <td id="efinciencia-real"></td>
          </tr>
          <tr>
            <td>Total</td>
            <td id="eficiencia-total"></td>
          </tr>
        </tbody>
      </table>                
    </div>
  </div>   
</div>


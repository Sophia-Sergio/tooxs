<div class="card card-transparent" id="productivity_demo">
  <div class="card-header ">
    <div class="card-title ">
      Parámetros de Búsqueda - Reporte Productividad
    </div>
  </div>

  <div class="card-block">
    <%= simple_form_for @search, :url => productivity_report_path, :method => :get do |f| %>
    <div class="row" id="sales_search_form">

      <div class="col-12 col-sm-6 col-md-6 col-lg-3">
        <%= f.input :store, collection: @stores, label: 'Tienda', wrapper: :select2, selected: params[:store]  %>  
      </div>

      <div class="col-12 col-sm-6 col-md-6 col-lg-3">
        <%= f.input :department, collection: @departments, label: 'Departamento', wrapper: :select2,selected: params[:department] %>  
      </div>

      <div class="col-12 col-sm-3 col-md-3 col-lg-2">
        <%= f.input :year, collection: (2018..2018), label: 'Año', wrapper: :select2, selected: params[:year] %>  
      </div>

      <div class="col-12 col-sm-3 col-md-3 col-lg-2">
        <%= f.input :month, collection: (1..8).map {|m| [I18n.l(DateTime.parse(Date::MONTHNAMES[m]), format: "%B").capitalize, m]}, label: 'Mes', wrapper: :select2, selected: params[:month]  %>  
      </div>

      <div class="col-12 col-sm-3 col-md-3 col-lg-1">
        <%= button_tag type: 'submit',class: "btn btn-success btn-lg btn-larger" do %>
        <i class="fa fa-search" aria-hidden="true"></i> Buscar
        <% end %>
      </div>  
    </div>
    <% end %>
  </div>
</div>


<div class="card">
  <div class="card-block">
    <div class="row">
      <div class="col-lg-12">
        <h4 class="bold">Productividad</h4>  
      </div>
    </div>
      <div class="row ">  
          <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
            <h5 class="text-uppercase m-t-30 fs-13 bold">Productividad por Hora // Alto Las Condes - Rincon Juvenil Mujer</h5>
            <div class="row ">
              <div class="col-sm-12 col-xl-10 offset-xl-1">
                <div id="chartContainer" style="width:100%;">
                  <canvas id="canvas"> </canvas>
                </div>
              </div>             
              <div id="productividades" class="col-md-6 offset-md-3">
              </div>
              <div class="col-md-6">
                <h2>Productividad <h2> <!-- al <%= I18n.l(Time.now, format: "%A, %d %B %Y", locale: :es) %></h2> -->
                <table id="table_desviaciones" class="table-shift table table-bordered bg-master-lightest">
                  <thead>
                    <th></th>
                    <th>Prod. Objetivo</th>
                    <th>Dotación</th>
                    <th>Venta</th>
                    <th>Prod.</th>
                  </thead>
                  <tbody>
                    <tr>
                      <td>Prod. Real</td>
                      <td class="prod_obj"></td>
                      <td id="dot_real"></td>
                      <td id="vent_real"></td>
                      <td id="prod_real"></td>
                    </tr>
                    <tr>
                      <td>Prod. Optimizada</td>
                      <td class="prod_obj"></td>
                      <td id="dot_op"></td>
                      <td id="vent_op"></td>
                      <td id="prod_op"></td>
                    </tr>
                  </tbody>
                </table>
              </div>

              <div class="col-lg-6">
                <h2>Detalle</h2>
                <table id="table_desviaciones" class="table table-bordered bg-master-lightest">
                  <thead>
                    <th></th>
                    <th>Exceso de horas</th>
                    <th>Horas faltantes</th>
                  </thead>
                  <tbody>
                    <tr>
                      <td>Real</td>
                      <td id="sum-exceso"></td>
                      <td id="sum-faltante"></td>
                    </tr>
                    <tr>
                      <td>Optimizada</td>
                      <td id="sum-exceso-op"></td>
                      <td id="sum-faltante-op"></td>
                    </tr>
                  </tbody>
                </table>
              </div>
              <div class="col-lg-6 offset-lg-3">
                <h2>Eficiencia</h2>
                <table id="table_desviaciones" class="table-shift table table-bordered bg-master-lightest">
                  <thead>
                    <th>Item</th>
                    <th>Valor %</th>
                  </thead>
                  <tbody>
                    <tr>
                      <td>Nivel eficiencia optimizada</td>
                      <td id="efinciencia-op"></td>
                    </tr>
                    <tr>
                      <td>Nivel esfuerzo real</td>
                      <td id="efinciencia-real"></td>
                    </tr>
                    <tr>
                      <td>Total</td>
                      <td id="eficiencia-total"></td>
                    </tr>
                  </tbody>
                </table>                
              </div>
            </div>    
          </div>
        </div>
      </div>
    </div>
</div>

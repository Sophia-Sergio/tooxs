<p id="notice"><%= notice %></p>

<h1>Plan de Ventas</h1>
<%= form_with url: import_sale_plans_path, multipart: true, local: true do %>
  <%= label_tag :file, 'Importar desde xlsx' %>
  <%= file_field_tag :file  %>
  <br>
  <%= submit_tag 'Importar', class: "btn btn-light"  %>
<% end %>

<table id="sale_plans" class="table-shift table table-bordered bg-master-lightest">
  <thead>
    <tr>
      <th>Tienda</th>
      <th>Departamento</th>
      <th>Fecha</th>
      <th>Semana</th>
      <th>Mes</th>
      <th>Dia</th>
      <th>Total Dia</th>
    </tr>
  </thead>

  <tbody>
    <% @sale_plans.each do |sale_plan| %>
      <tr>
        <td><%= sale_plan.store %></td>
        <td><%= sale_plan.department %></td>
        <td><%= l sale_plan.sale_date %></td>
        <td><%= sale_plan.week %></td>
        <td><%= sale_plan.month %></td>
        <td><%= sale_plan.day %></td>
        <td><%= number_to_currency sale_plan.total_day %></td>
      </tr>
    <% end %>
  </tbody>
</table>

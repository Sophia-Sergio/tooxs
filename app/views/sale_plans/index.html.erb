<style type="text/css">
.dataTables_wrapper .row > div {
    display: flex;
    justify-content: space-between;
    width: 100%;
    flex-direction: column;
}

.dataTables_length, #tabla-colaboradores_filter
{
  display: none;
}

.table.dataTable.no-footer {
    display: inline-table;
    border: none;
    overflow: auto;
}

table.dataTable thead .sorting,.table thead tr th[class*='sorting_']:not([class='sorting_disabled']) {
    border-top: 1px solid #eceeef;
}
</style>
<p id="notice"><%= notice %></p>
<div class="container-fluid">
  <div class="pantalla-seccion d-flex flex-wrap justify-content-between mb-2">
    <div class="align-self-end">
      <div class="titulo-pantalla">Plan</div>
    </div>
    <div class="align-self-end text-right boton-comparar">
      <%= form_with url: import_sale_plans_path, multipart: true, local: true do %>
        <br>
        <%= link_to 'Resetear datos', delete_sale_plans_path, class: "btn" %>
        <%= link_to 'Descargar datos de prueba', downloads_sale_plans_path, class: "btn" %>
      <% end %>
    </div>
  </div>
  <div class="formulario-comparacion">
    <div class="sub-titulo-pantalla">Plan de ventas</div>
    <div class="table-responsive">
      <table id="sale_plans" class="table" style="width: 100%">
        <thead>
          <tr>
            <th>Tienda</th>
            <th>Departamento</th>
            <th>Fecha</th>
            <th>Semana</th>
            <th>Mes</th>
            <th>Dia</th>
            <th>Total Dia</th>
          </tr>
        </thead>

        <tbody>
          <% @sale_plans.each do |sale_plan| %>
            <tr>
              <td><%= sale_plan.store %></td>
              <td><%= sale_plan.department %></td>
              <td><%= l sale_plan.sale_date %></td>
              <td><%= sale_plan.week %></td>
              <td><%= sale_plan.month %></td>
              <td><%= sale_plan.day %></td>
              <td><%= number_to_currency sale_plan.total_day %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="container-fluid" id="efficiency_report">
  <div class="pantalla-seccion d-flex justify-content-between mb-2">
    <div class="align-self-end">
      <div class="titulo-pantalla">Eficiencia</div>
    </div>
  </div>

  <div class="dashboard__filter">
    <%= simple_form_for @search, :url => efficiency_index_path, :class => 'row', :method => :get do |f| %>
      <%= f.input :store, collection: @stores, label: 'Tienda', wrapper: :select2, selected: params[:store] , label: false %>
      <%= f.input :department, collection: @departments, label: 'Departamento', wrapper: :select2,selected: params[:department], label: false %>
      <%= f.input :year, collection: (2018..2018), label: 'Año', wrapper: :select2, selected: params[:year], label: false %>
      <%= f.input :month_init, collection: (1..5).map {|m| [I18n.l(DateTime.parse(Date::MONTHNAMES[m]), format: "%B").capitalize, m]}, label: 'Mes', wrapper: :select2, selected: 5, label: false  %>
      <%= f.input :month_fin, collection: (1..5).map {|m| [I18n.l(DateTime.parse(Date::MONTHNAMES[m]), format: "%B").capitalize, m]}, label: 'Mes', wrapper: :select2, selected: 5, label: false  %>
      <button class="btn btn-primary" type="submit"><i class="fa fa-search" aria-hidden="true"></i> Buscar</button>
    <% end %>
  </div>

  <% if params[:store] %>
  <div class="formulario-comparacion">
    <div class="sub-titulo-pantalla">Resultado de búsqueda</div>
    <div class="row ">
      <h5 class="text-uppercase m-t-30 fs-13 bold">Eficiencia - <%= Store.find(params[:store]) %> - <%= Department.find(params[:department]) %></h5>
    </div>
    <div class="row ">
      <div class="col-sm-12 col-xl-10 offset-xl-1">
        <div id="chartContainer" style="width:100%;">
          <canvas id="canvas"> </canvas>
        </div>
      </div>
    </div>
  </div>
  <% end %>

</div>


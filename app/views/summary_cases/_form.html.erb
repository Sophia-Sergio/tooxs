<%= simple_form_for(@summary_case) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :id_case %>
    <%= f.input :sale_plan %>
    <%= f.input :coverange_deficit %>
    <%= f.input :surplus_coverange %>
    <%= f.input :total_deviation %>
    <%= f.input :cost_of_remunerations %>
    <%= f.input :margin_adjustment %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
